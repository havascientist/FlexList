<body>
	<div class="container">
		<h1>Kalender Jadwal</h1>
		<div class="row">
			<div class="col-md-9">
				<table class="calendar">
					<thead>
						<tr>
							<th>Minggu</th>
							<th>Senin</th>
							<th>Selasa</th>
							<th>Rabu</th>
							<th>Kamis</th>
							<th>Jumat</th>
							<th>Sabtu</th>
						</tr>
					</thead>
					<tbody>
						<?php
						$sql = "SELECT * FROM jadwal WHERE username = '$sess_username'";
						$result = mysqli_query($koneksi, $sql);
						$jadwal = array();
						if (mysqli_num_rows($result) > 0) {
						    while($row = mysqli_fetch_assoc($result)) {
						        $jadwal[$row["tanggal"]][] = $row;
						    }
						}
						$tanggal_awal = date("Y-m-01");
						$tanggal_akhir = date("Y-m-t");
						$tanggal = $tanggal_awal;
						while ($tanggal <= $tanggal_akhir) {
							$data_jadwal = isset($jadwal[$tanggal]) ? $jadwal[$tanggal] : array();
							?>
							<tr>
								<?php
									for ($i = 0; $i < 7; $i++) {
										if (date("Y-m", strtotime($tanggal)) == date("Y-m", strtotime($tanggal_awal)) || $i > 0) {
											?>
											<td>
												<div class="date"><?php echo date("d", strtotime($tanggal)); ?></div>
												<div class="events">
													<ul>
														<?php
															foreach ($data_jadwal as $jadwal) {
																?>
																<li><?php echo $jadwal["judul"]; ?></li>
																<?php
															}
														?>
													</ul>
													<div class="add-event" data-tanggal="<?php echo $tanggal; ?>">+</div>
												</div>
											</td>
											<?php
										} else {
											?>
											<td></td>
											
										<?php }
										$tanggal = date("Y-m-d", strtotime("+1 day", strtotime($tanggal)));
									}
								?>
							</tr>
							<?php
						}
					?>
				</tbody>
			</table>
		</div>
		<div class="col-md-3">
			<h2>Tambah Jadwal</h2>
			<form id="form-jadwal">
				<div class="form-group">
					<label for="input-judul">Judul</label>
					<input type="text" id="input-judul" class="form-control" required>
				</div>
				<div class="form-group">
					<label for="input-tanggal">Tanggal</label>
					<input type="date" id="input-tanggal" class="form-control" required>
				</div>
				<div class="form-group">
					<label for="input-waktu">Waktu</label>
					<input type="time" id="input-waktu" class="form-control" required>
				</div>
				<button type="submit" class="btn btn-primary">Simpan</button>
			</form>
		</div>
	</div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
	$(".add-event").click(function() {
		var tanggal = $(this).data("tanggal");
		$("#input-judul").val("");
		$("#input-tanggal").val(tanggal);
		$("#input-waktu").val("");
		$("#form-jadwal").attr("action", "tambah_jadwal.php");
	});
	$("#form-jadwal").submit(function(event) {
		event.preventDefault();
		var judul = $("#input-judul").val();
		var tanggal = $("#input-tanggal").val();
		var waktu = $("#input-waktu").val();
		$.post("tambah_jadwal.php", {judul: judul, tanggal: tanggal, waktu: waktu}, function(data) {
			if (data == "sukses") {
				location.reload();
			} else {
				alert("Gagal menyimpan jadwal.");
			}
		});
	});
</script>
